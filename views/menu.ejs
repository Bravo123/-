<!DOCTYPE html>
<html>
<head>
	<title>列表</title>
</head>
<body>
	<h1>学生列表</h1>
	<table>
		<thead>
			<tr>
				<th>学号</th>
				<th>姓名</th>
				<th>性别</th>
				<th>班级</th>
				<th>年龄</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
		<% for(let i=0; i<studentList.length;i++) { %>
		<% 	if(studentList[i].del == "false") { %>
			<tr>
				<td><%=studentList[i].id %></td>
				<td><%=studentList[i].name %></td>
				<td><%=studentList[i].sex %></td>
				<td><%=studentList[i].class %></td>
				<td><%=studentList[i].age %></td>
				<td>
					<a href="/menu/edit?id=<%=studentList[i].id%>" >编辑</a>
					<button onclick="del('<%=studentList[i].id%>')">删除</button>
				</td>
			</tr>
		<% }} %>
		</tbody>
	</table>
	<script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
	<script type="text/javascript">
		function del(id) {
			if(!confirm("确认删除吗")) {
		       location.href = "/menu";
		       return;
		    }
			$.ajax({
				url: '/menu/del',
				type: 'post',
				data: {
					id: id
				},
				dataType: "json",
				success: function(res) {
					alert(res.message);
					location.href = "/menu";
				}
			})
		}
	</script>
</body>
</html>